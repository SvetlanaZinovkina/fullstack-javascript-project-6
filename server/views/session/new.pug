extends ../layouts/application

block header
  h1.display-4.fw-bold.mt-4.text-center= t('views.session.new.signIn')

block content

  .container.wrapper.flex-grow-1
    .row.justify-content-center
      .col-12.col-md-8
        .card.shadow-sm
          .card-body.row.p-5
            .col-12.col-md-6.d-flex.align-items-center.justify-content-center
              img.rounded-circle(src=assetPath('welcome.png') alt="task manager" width="100%")
            .col-12.col-md-6.mt-3.mt-mb-0
              form(action=route('session'), method='post')
                .form-floating.mb-3
                  input.form-control(id='data_email', name='data[email]', value='', placeholder=t('views.session.new.email'), type='text', class=errors ? 'is-invalid' : '')
                  label(for='data_email')= t('views.session.new.email')
                  if errors
                    .form-control-feedback.invalid-feedback
                      each error in errors.email
                        p= error.message
                .form-floating.mb-3
                  input.form-control(id='data_password', name='data[password]', value='', placeholder=t('views.session.new.password'), type='password', class=errors ? 'is-invalid' : '')
                  label(for='data_password')= t('views.session.new.password')
                input.btn.btn-primary(type='submit', value=t('views.session.new.submit'))
